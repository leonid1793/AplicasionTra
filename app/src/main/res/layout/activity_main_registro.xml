        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="-340dp"
        android:drawableLeft="@drawable/ic_dni"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:hint="Nombre completo"
        android:id="@+id/editText5"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="270dp"
        android:layout_marginStart="-320dp"
        android:drawableLeft="@drawable/ic_login"/>



    <EditText
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:inputType="number"
        android:hint="Numero de Celular"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="-320dp"
        android:drawableLeft="@drawable/ic_celular"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:hint="Correo"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="410dp"
        android:layout_marginStart="-320dp"
        android:drawableLeft="@drawable/ic_correo"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:inputType="text"
        android:hint="ContraseÃ±a"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="480dp"
        android:layout_marginStart="-320dp"
        android:drawableLeft="@drawable/ic_contrasena"/>

    <CheckBox
        android:text="Terminos de Condiciones"
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:id="@+id/checkBox2"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="-320dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:text="Crear Cuenta"
        android:background="@drawable/button_style"
        android:layout_width="273dp"
        android:layout_height="66dp"
        android:id="@+id/button_crear"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="630dp"
        android:layout_marginStart="-300dp"
        android:textColor="@android:color/background_light"/>





</LinearLayout>